# stacks/whisparr/compose.yml.j2
version: "3.8"
services:
  whisparr:
    # Use hotio (popular alternative) or thespad image
    image: ghcr.io/hotio/whisparr:latest # Or ghcr.io/thespad/whisparr:latest
    container_name: whisparr
    restart: unless-stopped
    environment:
      - PUID={{ user_puid }}
      - PGID={{ user_pgid }}
      - TZ={{ timezone }}
      - UMASK=002 # Optional
    volumes:
      - "{{ base_data_dir }}/whisparr/config:/config"
      # Mount the parent download/video directory
      - /path/to/your/videos:/data # CHANGE HOST PATH (Consistent internal path)
    ports:
      - "6969:6969" # Default Whisparr port
    networks:
      - media_network
    # If Whisparr needs to go through VPN:
    # network_mode: "service:gluetun"
    # depends_on:
    #  - gluetun

networks:
  media_network:
    external: true
    name: media_network
